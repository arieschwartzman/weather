{
    "compilerOptions": {
        "typeRoots": [
            // add path to @types
            "node_modules/@types"
        ],
        "target": "es2017",
        "module": "commonjs",
        "sourceMap": true,
        "alwaysStrict": true,
        "lib": [
            "es5",
            "es6",
            "dom",
            "es2015.core",
            "es2015.collection",
            "es2015.generator",
            "es2015.iterable",
            "es2015.promise",
            "es2015.proxy",
            "es2015.reflect",
            "es2015.symbol",
            "es2015.symbol.wellknown",
            "esnext.asynciterable"
        ]
    },
    "exclude": [
        "node_modules",
        "public",
        "views",
        "bin"
    ]
}